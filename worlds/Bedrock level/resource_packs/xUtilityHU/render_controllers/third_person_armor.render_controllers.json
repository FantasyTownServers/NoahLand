{
  "format_version": "1.8.0",
  "render_controllers": {
    "controller.render.helmet": {
      "arrays": {
        "textures": {
          "array.helmets": [
            "texture.leather_helmet",
            "texture.chainmail_helmet",
            "texture.iron_helmet",
            "texture.diamond_helmet",
            "texture.gold_helmet",
            "texture.gold_helmet",//pad array
            "texture.turtle_helmet",
            "texture.netherite_helmet"
          ]
        }
      },
      "geometry": "Geometry.helmet",
      "materials": [ { "*": "material.alpha" } ],
      "textures": [ "array.helmets[query.armor_texture_slot(0)]" ],
      "is_hurt_color": {
      	"r":"variable.enchanted_helmet ? 0.4 : 0.0",
      	"g":0.0,
      	"b":"variable.enchanted_helmet",
      	"a":"variable.enchanted_helmet ? 0.05 * math.cos(query.life_time* 425.0) + 0.25 : 0.0"
      },
      "on_fire_color": {
      	"r":"variable.enchanted_helmet ? 0.4 : 0.0",
      	"g":0.0,
      	"b":"variable.enchanted_helmet",
      	"a":"variable.enchanted_helmet ? 0.05 * math.cos(query.life_time* 425.0) + 0.25 : 0.0"
      },
      "overlay_color":{
      	"r":"variable.enchanted_helmet ? 0.4 : 0.0",
      	"g":0.0,
      	"b":"variable.enchanted_helmet",
      	"a":"variable.enchanted_helmet ? 0.05 * math.cos(query.life_time* 425.0) + 0.25 : 0.0"
      },
      "light_color_multiplier": "variable.enchanted_helmet ? 0.05 * -math.cos(query.life_time * 500.0) + 1.5 : 1.15",
      "ignore_lighting":true
    },
